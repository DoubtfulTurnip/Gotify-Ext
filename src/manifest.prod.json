{
  "name": "Gotify Notifications",
  "version": "{|vers|}",
  "description": "Unofficial browser extension for Gotify with full Markdown support",
  "manifest_version": 2,
  "icons": {
    "16": "assets/logo-16.png",
    "48": "assets/logo-48.png",
    "128": "assets/logo-128.png"
  },
  "background": {
    "scripts": [
      "background.js",
      "runtime.js"
    ]
  },
  "permissions": [
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/logo-16.png",
      "48": "assets/logo-48.png",
      "128": "assets/logo-128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "gotify-markdown@custom",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  }
}
